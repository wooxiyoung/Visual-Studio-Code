
// var b = 0;
var a;
function v(){
a = document.getElementById("가위/바위/보 입력하세요")
}
var random = Math.floor(Math.random() * 3) + 1;

while(true){
    v();
    if(a=="가위"||a=="바위"||a=="보"){
        break;
    }
    else{alert("다시 선택하세요");}
}


switch(a){
    case "가위":
        // b = 1;
        document.write("사용자 : 가위 를 선택하셨습니다.");
        document.write("<br>");
        switch(random){
            case 1:
                document.write("시스템 : 가위를 선택하였습니다")
                document.write("<br>")
                document.write("결과 : 비김")
                break;
            
            case 2:
                document.write("시스템 : 바위를 선택하였습니다")
                document.write("<br>")
                document.write("결과 : 졌음")
                break;
            
            case 3:
                document.write("시스템 : 보를 선택하였습니다")
                document.write("<br>")
                document.write("결과 : 이겼음")
                break;
        }
        break;
    case "바위":
        b = 2;
        document.write("사용자 : 바위 를 선택하셨습니다.")
            document.write("<br>")
        switch(random){
            case 1:
                document.write("시스템 : 가위를 선택하였습니다")
                document.write("<br>")
                document.write("결과 : 이김")
                break;
            
            case 2:
                document.write("시스템 : 바위를 선택하였습니다")
                document.write("<br>")
                document.write("결과 : 비김")
                break;
            
            case 3:
                document.write("시스템 : 보를 선택하였습니다")
                document.write("<br>")
                document.write("결과 : 졌음")
                break;
        }
        break;
    case "보":
        b = 3;
        document.write("사용자 : 보 를 선택하셨습니다.")
            document.write("<br>")
        switch(random){
            case 1:
                document.write("시스템 : 가위를 선택하였습니다")
                document.write("<br>")
                document.write("결과 : 졌음")
                break;
            
            case 2:
                document.write("시스템 : 바위를 선택하였습니다")
                document.write("<br>")
                document.write("결과 : 이겼음")
                break;
            
            case 3:
                document.write("시스템 : 보를 선택하였습니다")
                document.write("<br>")
                document.write("결과 : 비김")
                break;
        }
        break;
    
}
